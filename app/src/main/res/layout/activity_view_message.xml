<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color3"
    android:padding="5dp"
    tools:context=".ViewMessage">\

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@drawable/tvbackground"
            android:gravity="start"
            android:padding="12dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32">


            <TextView
                android:id="@+id/ticketNumberID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_y="15dp"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvsubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_y="135dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvmessage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_y="190dp"
                android:background="@drawable/textbox"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_y="70dp"
                android:gravity="start"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_y="50dp"
                android:gravity="start"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_y="90dp"
                android:gravity="start"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_y="110dp"
                android:gravity="start"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/key"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_y="650dp"
                android:background="@drawable/textbox"
                android:gravity="start"
                android:hint="Write a reply"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/image3"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <Button
                android:id="@+id/toDeliver"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_y="700dp"
                android:background="@drawable/buttons2"
                android:text="Marked as Pending"
                android:textColor="@color/white"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply" />

            <Button
                android:id="@+id/toFinish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_y="750dp"
                android:background="@drawable/buttons2"
                android:text="Marked as Completed"
                android:textColor="@color/white"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply" />

            <AbsoluteLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_y="403dp"
                android:background="@drawable/textbox"
                android:padding="10dp"
                tools:ignore="Deprecated">


                <ImageView
                    android:id="@+id/addImage1"
                    android:layout_width="103dp"
                    android:layout_height="208dp"
                    android:layout_x="0dp" />


                <ImageView
                    android:id="@+id/addImage2"
                    android:layout_width="103dp"
                    android:layout_height="208dp"
                    android:layout_x="120dp" />


                <ImageView
                    android:id="@+id/addImage3"
                    android:layout_width="103dp"
                    android:layout_height="208dp"
                    android:layout_x="240dp"
                    android:gravity="end" />

            </AbsoluteLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        </AbsoluteLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>